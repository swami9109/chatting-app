<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileImagee"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/camera" />

    <TextView
        android:id="@+id/msgSenderTyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6.30dp"
        android:layout_marginTop="16.50dp"
        android:layout_marginEnd="1.30dp"
        android:layout_marginBottom="6.5dp"
        android:layout_toLeftOf="@+id/profileImagee"
        android:text="Hello Brother"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:letterSpacing="0.06"
        android:background="@drawable/sender_shape"
        android:padding="10dp"
        android:textStyle="bold"/>

</RelativeLayout>